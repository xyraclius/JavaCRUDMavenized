<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>tambah_user</servlet-name>
        <jsp-file>/tambah_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>tambah_user</servlet-name>
        <url-pattern>/tambah_user</url-pattern>
    </servlet-mapping>  
    
    <servlet>
        <servlet-name>edit_user</servlet-name>
        <jsp-file>/edit_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit_user</servlet-name>
        <url-pattern>/edit_user</url-pattern>
    </servlet-mapping>       

    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.nabil.controller.UserController</servlet-class>                      
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>        
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
